---
export interface Props {
  title?: string;
  text?: string;
  titleColor?: string;
}

const { title, text, titleColor } = Astro.props;
---

<div class="flex-1 rounded bg-zinc-100 p-6 shadow">
  <h2
    class={`h-[113px] w-[70px] font-['Suprema'] text-[90px] font-bold leading-[108px] text-${titleColor}`}
  >
    {title}
  </h2>
  <p>{text}</p>
</div>
