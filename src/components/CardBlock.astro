---
import Card from "./core/Card.astro";

const cards = [
  {
    id: 1,
    title: "1.",
    text: "Protecciones de eje retirables (clase 1) en formato de fundas y/o cubiertas, de acuerdo con las especificaciones ERWA - Coating for Axle Guideline.",
  },
  {
    id: 2,
    title: "2.",
    text: "Paneles de protección de los sistemas auxiliares del tren como antenas de comunicación, instalaciones neumáticas, suspensión y/o aire acondicionado, bajo bastidor de bogie.",
  },
  {
    id: 3,
    title: "3.",
    text: "Testeros o sistemas de protección de trenes ligeros sobre superficie.",
  },
];
---

<div class="grid grid-cols-3 gap-4">
  {
    cards.map(card => (
      <div class="flex flex-col">
        <Card title={card.title} text={card.text} />
      </div>
    ))
  }
</div>
