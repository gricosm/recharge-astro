---
import MainLayout from "@layouts/MainLayout.astro";
import ArrowTitle from "@components/ArrowTitle.astro";
import Button from "@components/Button.astro";
import Card from "@components/Card.astro";
import { getLangFromUrl, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const cards = [
  {
    id: 1,
    title: "1.",
    titleColor: "custom-dark-green",
    text: "Protecciones de eje retirables (clase 1) en formato de fundas y/o cubiertas, de acuerdo con las especificaciones ERWA - Coating for Axle Guideline.",
  },
  {
    id: 2,
    title: "2.",
    titleColor: "custom-green",
    text: "Paneles de protección de los sistemas auxiliares del tren como antenas de comunicación, instalaciones neumáticas, suspensión y/o aire acondicionado, bajo bastidor de bogie.",
  },
  {
    id: 3,
    title: "3.",
    titleColor: "custom-blue",
    text: "Testeros o sistemas de protección de trenes ligeros sobre superficie.",
  },
];
---

<MainLayout title="Recharge" description="Home Recharge Web">
  <div class="background-pattern">
    <section class="px-4 py-12">
      <h1 class="text-5xl font-bold text-custom-dark">¿Qué es Recharge?</h1>

      <p class="py-5">
        Empresa dedicada al diseño y suministro de protecciones frente impacto
        para el sector ferroviario.
      </p>

      <Button href={translatePath("/about")}>Sobre Nosotros</Button>

      <div class="pt-8">
        <p class="custom-card-green max-w-[44.5rem] text-sm text-white">
          This project is supported by EIT Urban Mobility, an initiative of the
          European Institute of Innovation and Technology (EIT), a body of the
          European Union. EIT Urban Mobility acts to accelerate positive change
          on mobility to make urban spaces more liveable. Learn more:
          eiturbanmobility.eu
        </p>
      </div>
    </section>

    <section class="background-dark-blurry">
      <div class="px-4 pb-8 pt-4">
        <ArrowTitle title="¿POR QUÉ RECHARGE?" colorText="white" />
        <h3 class="pt-5 text-xl text-white">
          Desarrollo flexible, reciclado, ligero: Protegemos lo que importa
        </h3>
        <p class="py-5 text-white">
          Recharge Recycling to Protect suministra absorbedores de energía en el
          sector ferroviario para la protección de material rodante frente a
          impacto a hielo o balasto.
        </p>

        <div class="grid gap-4 md:grid-cols-3">
          {
            cards.map(card => (
              <div class="flex flex-col">
                <Card
                  title={card.title}
                  titleColor={card.titleColor}
                  text={card.text}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</MainLayout>
